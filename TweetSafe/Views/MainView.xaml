<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:TweetSafe"
             xmlns:helpers="clr-namespace:TweetSafe.Helpers"
             xmlns:controls="clr-namespace:TweetSafe.Controls"
             xmlns:viewModels="clr-namespace:TweetSafe.ViewModels"
             x:Class="TweetSafe.Views.MainView"
             BackgroundColor = "White">

    <ContentPage.BindingContext>
        <viewModels:MainViewModel /> 
    </ContentPage.BindingContext>
          
    <StackLayout 
        BackgroundColor = "White"
        VerticalOptions = "Start"
        Spacing = "-20"
        Padding = "0, 40" > 
                 
        <Image 
            Source= "twitterIcon.png"
            WidthRequest = "200"
            VerticalOptions = "Center"
        />
            
        <Label 
            Text="Welcome to TweetSafe!" 
            HorizontalOptions="Center" 
            VerticalOptions="Center"
            TextColor = " { StaticResource TwitterBlue }" />
        
    </StackLayout>

</ContentPage>